{
  "workflow_description": {
    "name": "STARsolo_single_cell",
    "version": 1.0,
    "label": "STARsolo Single cell",
    "type": "STARsolo_single_cell",
    "inputs": "raw_fastq/{sample}*fastq.gz",
    "outputs": [
      "mapped/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "gui_params": {
    "primary": {
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": ##INCLUDE:reference_info/default_reference.json##,
        "list": ##INCLUDE:reference_info/reference2.json##
      },
      "assay_type": {
        "label": "Assay type",
        "type": "enum",
        "default": "tenX_v3",
        "list": {
          "tenX_v3": "10x 3' v3",
          "tenX_v2": "10x 3' v2",
          "tenX_multiome": "10x multiome",
          "tenX_5p": "10x chemistry SC5P-R2",
          "tenX_5p_pe": "10x chemistry SC5P-PE",
          "DropSeq": "DropSeq",
          "SeqWell": "SeqWell",
          "ShareSeq": "ShareSeq"
        }
      },
      "soloCellFilter": {
        "label": "soloCellFilter",
        "type": "enum",
        "default": "EmptyDrops_CR",
        "list": {
          "EmptyDrops_CR": "EmptyDrops_CR",
          "CellRanger2.2": "CellRanger2.2"
        }
      }
    }
  }
}

