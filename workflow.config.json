{
  "workflow_description": {
    "name": "single_cell",
    "version": 1.0,
    "label": "Single cell",
    "type": "single_cell",
    "inputs": "raw_fastq/{sample}*fastq.gz",
    "outputs": [
      "cell_ranger/*"
    ],
    "report_index": "cell_ranger/outs/web_summary.html",
    "reports":[
       "cell_ranger/outs/web_summary.html"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "gui_params": {
    "primary": {
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": ##INCLUDE:reference_info/default_reference.json##,
        "list": ##INCLUDE:reference_info/reference.json##
      }
    },
    "detailed": {
      "sc_hashtags": {
        "label": "sc_hashtags",
        "type": "enum",
        "default": "classic",
        "list": {
          "classic": "classic",
          "no": "no sc_hashtag"
        }
      }
    },
    "samples": {
      "SC_lib_type": {
        "label": "SC library type",
        "type": "enum",
        "default": "Gene Expression",
        "list": {
          "Gene Expression": "Gene Expression",
          "Antibody Capture": "Antibody Capture"
        }
      }
    }
  }
}

