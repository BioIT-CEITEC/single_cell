{
  "workflow_description": {
    "name": "STARsolo_single_cell",
    "version": 1.0,
    "label": "STARsolo Single cell",
    "type": "STARsolo_single_cell",
    "inputs": "raw_fastq/{sample}*fastq.gz",
    "outputs": [
      "mapped/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "gui_params": {
    "primary": {
      "organism": {
        "label": "Organism",
        "type": "enum",
        "dynamicEnumName": "organism" 
      },
      "assembly": {
        "label": "Assembly",
        "type": "enum",
        "dynamicEnumName": "assembly",
        "filters": {
          "group": {
            "param": "organism",
            "type": "value",
            "showGroupLabel": false
          }
        }
      },
      "release": {
        "label": "Release",
        "type": "enum",
        "dynamicEnumName": "release",
        "filters": {
          "group": {
            "param": "assembly",
            "type": "value",
            "showGroupLabel": false
          }
        }
      },
      "assay_type": {
        "label": "Assay type",
        "type": "enum",
        "dynamicEnumName": "single_cell_assay"
      },
      "soloCellFilter": {
        "label": "soloCellFilter",
        "type": "enum",
        "default": "EmptyDrops_CR",
        "list": {
          "EmptyDrops_CR": "EmptyDrops_CR",
          "CellRanger2.2": "CellRanger2.2"
        }
      }
    }
  }
}