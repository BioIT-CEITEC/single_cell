{
  "workflow_description": {
    "name": "single_cell",
    "version": 1.0,
    "label": "Single cell",
    "type": "single_cell",
    "inputs": "qc_reports/{sample}*fastq.gz",
    "outputs": [
      "results/*"
    ],
    "report_index": "results/single_cell_final_report.html",
    "reports":[
       "results/*"
    ]
  },
  "general_params": [
    "library_name",
    "sample_name",
    "lib_forward_read_length",
    "lib_reverse_read_length"
  ],
  "gui_params": {
    "primary": {
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": "GRCh38-p10",
        "list": ##INCLUDE:reference_info/reference.json##
      }
    },
    "detailed": {
      "sc_hashtags": {
        "label": "sc_hashtags",
        "type": "enum",
        "default": "classic",
        "list": {
          "classic": "classic",
          "no": "no sc_hashtag"
        }
      }
    }
  }
}

